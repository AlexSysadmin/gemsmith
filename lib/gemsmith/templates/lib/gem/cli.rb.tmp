require "yaml"
require "thor"

module <%= config[:gem_class] %>
  class CLI < Thor

    # Initialize.
    def initialize args = [], options = {}, config = {}
      super
    end

    desc "-v, [version]", "Show version."
    map "-v" => :version
    def version
      print_version
    end
    
    desc "-h, [help]", "Show this message."
    def help task = nil
      shell.say and super
    end

    private

    # Print version information.
    def print_version
      shell.say "<%= config[:gem_class] %> " + VERSION
    end
  end
end
